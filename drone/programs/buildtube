--tube maker

--4 left 2 up 1 fd 2 dn 2 inv


local function buildForward(dist)
  for i=1,dist do
    turtlex.turnLeft()
    turtlex.digDown()
    turtlex.placeDown("glass")
    turtlex.dig()
    turtlex.place("glass")
    turtlex.digUp()
    turtlex.up()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.digUp()
    turtlex.placeUp("glass")
    turtlex.turnAround()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.down()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnLeft()
    turtlex.dig()
    turtlex.forward()
  end
end

local function buildTurnLeft()
  turtlex.digDown()
  turtlex.placeDown("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("stone")
  turtlex.digUp()
  turtlex.up()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.digUp()
  turtlex.placeUp("glass")
  turtlex.turnLeft()
  turtlex.dig()
  turtlex.place("stone")
  turtlex.down()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnLeft()
  turtlex.dig()
  turtlex.forward()
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.digDown()
  turtlex.placeDown("glass")
  turtlex.digUp()
  turtlex.up()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.digUp()
  turtlex.placeUp("glass")
  turtlex.turnLeft()
  turtlex.down()
  turtlex.dig()
  turtlex.forward()    
end


