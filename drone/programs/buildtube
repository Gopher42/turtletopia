  turtlex.down()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.forward()
  turtlex.digUp()
  turtlex.up()
  turtlex.placeDown("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnLeft()
  turtlex.dig()
  turtlex.place("stone")
  turtlex.turnLeft()
