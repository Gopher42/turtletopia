end

local function buildUp(dist)
  for i=1,dist do
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.forward()
    turtlex.turnLeft()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("stone")
    turtlex.right()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.digUp()
    turtlex.up()
    turtlex.turnRight()
  end
end

