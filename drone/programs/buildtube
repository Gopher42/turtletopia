local function buildDown(dist)
  for i=1,dist do
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("stone")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()    
    turtlex.forward()
    turtlex.turnLeft()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.turnRight()
    turtlex.dig()
    turtlex.place("glass")
    turtlex.right()
    turtlex.turnLeft()
    turtlex.back()
    turtlex.digDown()
    turtlex.down()
  end
end

local function buildDownU()
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.forward()
  turtlex.turnLeft()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("stone")
  turtlex.turnRight()
  turtlex.dig()
  turtlex.place("glass")
  turtlex.turnRight()
  turtlex.digDown()
  turtlex.placeDown("glass")
  turtlex.forward()
  turtlex.digDown()
  turtlex.placeDown("stone")
end

